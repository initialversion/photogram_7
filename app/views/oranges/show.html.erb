<div class="page-header">
  <h3>Orange #<%= @orange.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Vote</dt>
      <dd><%= @orange.vote_id %></dd>

      <dt>Orange name</dt>
      <dd><%= @orange.orange_name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/oranges" class="btn btn-primary">
        Back
      </a>
      <a href="/oranges/<%= @orange.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_orange/<%= @orange.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
