<div class="page-header">
  <h1>
    Oranges
    <a href="/oranges/new" class="btn btn-lg btn-success">New Orange</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Vote</th>
        <th>Orange name</th>
        <th>Actions</th>
      </tr>

      <% @oranges.each do |orange| %>
      <tr>
        <td><%= orange.vote.created_at %></td>
        <td><%= orange.orange_name %></td>
        <td>
          <a href="/oranges/<%= orange.id %>" class="btn btn-primary">Show</a>
          <a href="/oranges/<%= orange.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_orange/<%= orange.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
