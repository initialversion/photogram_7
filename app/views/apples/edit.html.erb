<!-- Validation failure messages -->
<% if @apple.errors.any? %>
  <% @apple.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Apple #<%= @apple.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_apple/<%= @apple.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for vote_id -->
      <div class="form-group">
        <label for="vote_id" class="control-label">
          Vote
        </label>

        <%= select_tag(:vote_id, options_from_collection_for_select(Vote.all, :id, :created_at, @apple.vote_id), :class => "form-control") %>
      </div>

      <!-- Label and input for apple_name -->
      <div class="form-group">
        <label for="apple_name" class="control-label">
          Apple name
        </label>

        <input type="text" id="apple_name" name="apple_name" placeholder="Apple name" class="form-control" value="<%= @apple.apple_name %>">
      </div>

      <button class="btn btn-warning">
        Update Apple
      </button>
      or
      <a href="/apples/<%= @apple.id %>">Cancel</a>
    </form>
  </div>
</div>
