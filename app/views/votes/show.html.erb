<div class="page-header">
  <h3>Vote #<%= @vote.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Voter</dt>
      <dd><%= @vote.voter_id %></dd>

      <dt>Photo</dt>
      <dd><%= @vote.photo_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/votes" class="btn btn-primary">
        Back
      </a>
      <a href="/votes/<%= @vote.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_vote/<%= @vote.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Vote has many apples -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Apples
      </li>

      <% @vote.apples.each do |apple| %>
        <li class="list-group-item">
          <a href="/apples/<%= apple.id %>">
            <%= apple.created_at %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A Vote has many oranges -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Oranges
      </li>

      <% @vote.oranges.each do |orange| %>
        <li class="list-group-item">
          <a href="/oranges/<%= orange.id %>">
            <%= orange.created_at %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>
